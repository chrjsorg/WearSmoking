<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.chrjs.wearsmoking.SetupActivity">
    <!-- Dummy item to prevent AutoCompleteTextView from receiving focus -->
    <LinearLayout
        android:focusable="true" android:focusableInTouchMode="true"
        android:layout_width="0px" android:layout_height="0px"/>
    <TextView
        android:id="@+id/textview_date_stopped"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:paddingBottom="4dp"
        android:text="Quit date?"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="17dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textview_date_stopped"
        android:scaleType="fitXY"
        android:src="@android:drawable/divider_horizontal_textfield" />

    <EditText
        android:id="@+id/editText_quitdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/imageView"
        android:layout_below="@+id/imageView"
        android:ems="10"
        android:inputType="date"
        android:text="10.07.2014" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editText_quitdate"
        android:layout_marginTop="33dp"
        android:paddingBottom="4dp"
        android:text="How many cigarettes did you smoke per day?"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="17dp" />

    <EditText
        android:id="@+id/editText_smoke_per_day"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView2"
        android:ems="10"
        android:inputType="number"
        android:text="20" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView2"
        android:scaleType="fitXY"
        android:src="@android:drawable/divider_horizontal_textfield" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editText_smoke_per_day"
        android:layout_marginTop="27dp"
        android:paddingBottom="4dp"
        android:text="Price per package?"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="17dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView4"
        android:scaleType="fitXY"
        android:src="@android:drawable/divider_horizontal_textfield" />

    <EditText
        android:id="@+id/edittext_ppp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editText_smoke_per_day"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/editText_smoke_per_day"
        android:layout_below="@+id/imageView4"
        android:ems="10"
        android:inputType="numberDecimal"
        android:text="5" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edittext_ppp"
        android:layout_marginTop="27dp"
        android:paddingBottom="4dp"
        android:text="Cigarettes per package?"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="17dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView5"
        android:scaleType="fitXY"
        android:src="@android:drawable/divider_horizontal_textfield" />

    <EditText
        android:id="@+id/edittext_cpp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/edittext_ppp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/edittext_ppp"
        android:layout_below="@+id/imageView5"
        android:ems="10"
        android:inputType="number"
        android:text="20" />


</RelativeLayout>
